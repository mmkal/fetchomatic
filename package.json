{
  "name": "fetchomatic",
  "version": "0.0.1",
  "description": "Wrap fetch with retries, timeout, logging, caching, error handling and more",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/cjs/index.d.ts",
      "require": "./dist/cjs/index.cjs",
      "import": "./dist/esm-wrapper.mjs"
    },
    "./esm": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "test": "playwright test",
    "test-all": "concurrently 'npm:test:*'",
    "test:node": "playwright test",
    "test:deno": "yarn build && DENO_NO_PACKAGE_JSON=true deno test test/deno --no-check --allow-net --allow-read --trace-ops",
    "test:bun": "bun test test/bun",
    "test-server": "ts-node test/server.ts",
    "playwright": "playwright",
    "playwright:browsers": "playwright install --with-deps",
    "eslint": "eslint --ext '.ts,.js,.md'",
    "lint": "tsc && eslint .",
    "build": "rm -rf dist && tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json && node scripts/wrap.cjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.16.3",
    "express": "^4.18.2",
    "isomorphic-fetch": "^3.0.0",
    "keyv": "^4.5.2",
    "make-fetch-happen": "^11.1.1",
    "minipass-fetch": "^3.0.3",
    "next": "^13.4.1",
    "node-fetch": "^2.6.2",
    "ts-node": "^10.9.1",
    "xstate": "^4.37.2",
    "zod": "^3.21.4"
  },
  "bin": "dist/bin.js",
  "files": [
    "dist",
    "*.md"
  ],
  "np": {
    "cleanup": false
  },
  "devDependencies": {
    "@playwright/test": "^1.36.1",
    "@types/eslint": "8.37.0",
    "concurrently": "^8.2.0",
    "eslint": "8.40.0",
    "eslint-plugin-mmkal": "0.1.2",
    "expect-type": "^0.15.0",
    "np": "7.7.0",
    "strip-indent": "^4.0.0",
    "typescript": "5.0.4"
  }
}
