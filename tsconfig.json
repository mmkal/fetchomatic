{
  "ts-node": {
    "transpileOnly": true,
    "esm": true
  },
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noEmit": true,
    "noErrorTruncation": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowImportingTsExtensions": true,
    "plugins": [
      {"name": "next"}
    ]
  },
  "include": [
    "src",
    "test",
    "*.js",
    ".*.*js",
    "*.md"
  ]
}
