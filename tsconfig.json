{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "ES2022",
    "module": "NodeNext",
    "strict": true,
    "noEmit": true,
    "noErrorTruncation": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "plugins": [
      {"name": "next"}
    ]
  },
  "include": [
    "src",
    "test",
    "scripts",
    "*.js",
    ".*.*js",
    "*.md"
  ],
  "exclude": [
    "test/deno",
    "test/bun"
  ]
}
